<h2>Add a new class for our clients</h2>
<form action="/events" method="post">
  <div class="form-wrapper">

<div class="form-elements">
  <label for="title">Title:</label>
  <input type="text" name="title" id="title" required>
</div>

<div class="form-elements">
  <label for="time_slot">Time:</label>
  <input type="text" name="time_slot" id="time_slot" required>
</div>

<div class="form-elements">
  <label for="event_date">Date:</label>
  <input type="text" name="event_date" id="event_date" required>
</div>

<div class="form-elements">
  <label for="type">Type:</label>
  <input type="text" name="type" id="type" required>
</div>

<div class="form-elements">
  <label for="type">Capacity:</label>
  <input type="number" name="capacity" id="capacity" required>
</div>

<div class="form-elements">
  <input type='submit' value="Add new class" class="btn">
</div>

  </div>
</form>
