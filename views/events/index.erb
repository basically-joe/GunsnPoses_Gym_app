<h1>Upcoming classes...</h1>
<div class="tables">
  <table>
    <thead>
      <tr>
        <th>Class</th>
        <th>Date</th>
        <th>Time</th>
        <th>Type</th>
        <th>Capacity</th>
        <th>Modify</th>
        <th>Remove</th>
      </tr>
    </thead>
    <tbody>
      <% for event in @events %>
      <tr>
        <td>
          <div class="hyperlink">
            <a href="/events/<%= event.id() %>"><%= event.title() %></a>
          </div>
        </td>
        <td><%= event.event_date() %></td>
        <td><%= event.time_slot() %></td>
        <td><%= event.type() %></td>
        <td><%= event.capacity() %></td>
        <td><button type="button" href="/events/<%= event.id() %>/edit">Edit</button></td>
        <td><form action="/events/<%= event.id() %>/delete" method="POST"><input type="submit" value="Delete"></form></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
<div  class="button">
  <button type="button" href="/events/new">Add a new class</button>
</div>
