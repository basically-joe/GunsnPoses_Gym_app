<h2>Upcoming classes</h2>
<div class="tables">
  <table>
    <thead>
      <tr>
        <th>Class</th>
        <th>Date</th>
        <th>Time</th>
        <th>Type</th>
        <th>Max</th>
        <th>Modify</th>
        <th>Remove</th>
      </tr>
    </thead>
    <tbody>
      <% for event in @events %>
      <tr>
        <td>
          <div class="hyperlink">
            <a href="/events/<%= event.id() %>"><%= event.title() %></a>
          </div>
        </td>
        <td><%= event.event_date() %></td>
        <td><%= event.time_slot() %></td>
        <td><%= event.type() %></td>
        <td><%= event.capacity() %></td>
        <td><a href="/events/<%= event.id() %>/edit" class="btn">Edit</a></td>
        <td><form action="/events/<%= event.id() %>/delete" method="POST"><input type="submit" class="btn" value="Delete"></form></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="form--events">
  <h2>Add a class</h2>
  <form action="/events" method="post">

  <div class="form-elements">
    <!-- <label for="title">Title:</label> -->
    <input placeholder="Title" type="text" name="title" id="title" required/>
  </div>

  <div class="form-elements">
    <!-- <label for="time_slot">Time:</label> -->
    <input placeholder="Time" type="text" name="time_slot" id="time_slot" required/>
  </div>

  <div class="form-elements">
    <!-- <label for="event_date">Date:</label> -->
    <input placeholder="Date" type="text" name="event_date" id="event_date" required/>
  </div>

  <div class="form-elements">
    <!-- <label for="type">Type:</label> -->
    <input placeholder="Type" type="text" name="type" id="type" required/>
  </div>

  <div class="form-elements">
    <!-- <label for="type">Capacity:</label> -->
    <input placeholder="Max" type="number" name="capacity" id="capacity" required/>
  </div>

  <div class="form-elements">
    <input type='submit' class="btn" value="Add new class">
  </div>

  </form>

</div>
