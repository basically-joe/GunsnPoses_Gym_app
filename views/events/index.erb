<h1>Upcoming classes...</h1>
<table>
  <tr>
    <th>Class</th>
    <th>Date</th>
    <th>Time</th>
    <th>Type</th>
    <th>Modify</th>
    <th>Remove</th>
  </tr>
  <% for event in @events %>
  <tr>
    <td><a href="/events/<%= event.id() %>"><%= event.title() %></a></td>
    <td><%= event.event_date() %></td>
    <td><%= event.time_slot() %></td>
    <td><%= event.type() %></td>
    <td><a href="/events/<%= event.id() %>/edit">Edit</a></td>
    <td><form action="/events/<%= event.id() %>/delete" method="POST"><input type="submit" value="Delete"></form></td>
  </tr>
  <% end %>
</table>
<a href="/events/new">Add a new class</a>
