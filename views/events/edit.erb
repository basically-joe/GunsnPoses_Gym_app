<h1>Edit <%= @events.title %> class:</h1>
<form action="/events/<%= @events.id %>" method="post">
  <div class="form-wrapper">

<div class="form-elements">
  <label for="title">Title:</label>
  <input type="text" name="title" id="title" value="<%= @events.title %>"/>
</div>

<div class="form-elements">
  <label for="time_slot">Time:</label>
  <input type="text" name="time_slot" id="time_slot" value="<%= @events.time_slot %>"/>
</div>

<div class="form-elements">
  <label for="event_date">Date:</label>
  <input type="text" name="event_date" id="event_date" value="<%= @events.event_date %>"/>
</div>

<div class="form-elements">
  <label for="type">Type:</label>
  <input type="text" name="type" id="type" value="<%= @events.type %>"/>
</div>

<div class="form-elements">
  <label for="type">Capacity:</label>
  <input type="number" name="capacity" id="capacity" value="<%= @events.capacity %>"/>
</div>

<div class="form-elements">
  <input type='submit' value="Update the class">
</div>

  </div>
</form>
