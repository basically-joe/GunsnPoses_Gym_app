<h2><%= @clients.format_name() %> info</h2>

<p>First name: <%= @clients.first_name.capitalize %></p>
<p>Last name: <%= @clients.last_name.capitalize %></p>
<p>Age: <%= @clients.age %></p>

<div class="tables">
  <table>
    <thead>
      <tr>
        <th>Booked classes</th>
      </tr>
    </thead>
    <tbody>
      <% @clients.events.each do |event| %>
      <tr>
        <td>
          <div class="hyperlink">
            <a href="/events/<%= event.id() %>"><%= event.title %></a>
          </div>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
