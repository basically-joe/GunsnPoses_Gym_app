<div class="form-booking">
<h2>Add client to a class</h2>
<form action="/bookings" method="post">
  <div class="form-wrapper">
    <div class="form-elements">
  <label>
  Select a class:
    <select name="event_id">
      <% for event in @events %>
      <option value="<%= event.id %>"><%= event.title %></option>
      <% end %>
    </select>
  </label>
  </div>
  <div class="form-elements">
  <label>
    Select a client:
    <select name="client_id">
      <% for client in @clients %>
      <option value="<%= client.id %>"><%= client.format_name %></option>
      <% end %>
    </select>
  </label>
  </div>
  <div class="form-elements">
  <input class="btn" type='submit' value="Update the class register">
</div>
</div>
</form>
</div>
